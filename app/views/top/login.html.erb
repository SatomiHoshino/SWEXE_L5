<%= form_tag '/top/login', method: :post do %>
    <%= label_tag :uid, 'ユーザID' %>
    <%= text_field_tag :uid %>
    <%= label_tag :pass, 'パスワード' %>
    <%= password_field_tag :pass %>
    <%= submit_tag 'ログイン' %>
<% end %>

<p>
    <%= link_to '新規登録', new_user_path %>
</p>
<p>
    <%= link_to 'メイン', top_login_form_path %>
</p>